{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    "types": [
      "node"],
    "jsx": "preserve",
    "typeRoots": [
      "node_modules/@types",
      "src/typings"
    ],
  },
  "include": [
    "src"
  ]
  
}
